{% extends 'base.html.twig' %}

{% block title %}Se connecter - Click & Coiff{% endblock %}

{% block content %}
{% block inscription %}{% endblock %}
<form method="post" class="text-center">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal mt-2 text-center">Connectez-vous </h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-50 m-auto" required autofocus placeholder="Merci de saisir votre adresse Email">
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control w-50 m-auto" required placeholder="Merci de saisir votre mot de passe">

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="text-center">
        <input class="btn btn-lg btn-info mt-4" type="submit" value="Se connecter">
    </div>
    <div class="mt-2">
        <a href="{{ path ('register')}}" class="text-dark">Cr√©er un compte</a>
    </div>
</form>
{% endblock %}
