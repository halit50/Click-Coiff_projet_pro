{% extends 'base.html.twig' %}

{% block title %}Recherche - Click & Coiff{% endblock %}

{% block content %}

<h2 class="text-center mt-3 text-dark"> RÃ©sultat de votre recherche</h2>

{% for enseigne in enseignes %}
<div class="card m-3 p-1 recherchenseigne">
  <div class="card-header bg-dark text-light recherchenseigne text-center">
    <p id="nomEnseigne">{{ enseigne.nom|capitalize }}</p>
  </div>
  <div class="card-body">
    <div class="d-flex justify-content-between">
    
    {% for test in enseigne.fichiers %}
  
        {% if test.categorie.nom == 'Salon' %}
            <img src="/image/{{ test.image }}" alt="{{ test.nom }}" id="listimg">
        {% endif %}
        
    {% endfor %}
    <p class="card-text inline-block text-bold">{{ enseigne.adresses|raw }}</p>
    </div>
    <div class="text-center">
    <a href="{{ path ('ficheEnseigne', {'id' : enseigne.id})}}" class="btn btn-info m-auto"> Prendre RDV</a>
    </div>
  </div>
</div>
{% endfor %}


{% endblock %}
