{% extends 'base.html.twig' %}

{% block title %}{{ enseigne.nom }} - Click & Coiff{% endblock %}

{% block content %}

    <div class="row mt-5">
        <div class="col-8">

            <h2 class="text-center text-dark" id="titre-enseigne"> {{ enseigne.nom|capitalize }}</h2>
            <p class="text-center text-dark pres-enseigne">{{ enseigne.adresses.rue}} </p>
            <p class="text-center text-dark pres-enseigne">{{ enseigne.adresses.codePostal}} {{ enseigne.adresses.ville|capitalize}}</p>
            <p class="text-center text-dark pres-enseigne"> Salon {{ enseigne.typeCoiffeur}}</p>
            
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" class="pres-enseigne">Nos prestations</th>
      <th scope="col" class="pres-enseigne">Prix</th>
      <th scope="col" class="pres-enseigne">Durée en minutes</th>
      </tr>
  </thead>
  <tbody>
    <tr>
         {% for prestation in enseigne.prestationServices %}
             <td class="pres-enseigne">{{ prestation.nom }}</td>
            <td class="pres-enseigne">{{ (prestation.prix / 100) | number_format(2, ',' , '.')}} €</td>
            <td class="pres-enseigne">{{ prestation.duree }} minutes</td>
        {% endfor %}
    </tr>
   </tbody>
</table>

           
        </div>
        <div class="col-4">
            {# Le attr, attribut un id à mon formulaire #}

                {{ form_start(form, {"attr" : {"id" : 'formrdv','novalidate': 'novalidate'} }) }}

                {{ form_end(form) }}
            <div id="hrdv">
                
            </div>
            <div id="plagehoraire" class="d-none" data-url="{{ path ('plage_horaire', {id: enseigne.id})}}">
                {# Embedding Controllers #}
                {# {{ render(controller(
        'App\\Controller\\FicheEnseigneController::plageHoraire', {id: enseigne.id}
    )) }} #}
            </div>
        </div>
    </div>
    {% endblock %}
    {% block javascript %} <script src="{{ asset('assets/js/scriptrdv.js')}}"></script>{% endblock %}


